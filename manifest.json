{
  "manifest_version": 3,
  "name": "Cookie Sync Test/Dev→Localhost",
  "version": "1.2",
  "description": "Копирует куки между серверами и показывает статус сессий на uchebnik и school доменах",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://uchebnik-test.mos.ru/*",
    "https://uchebnik-dev.mos.ru/*",
    "https://school-dev.mos.ru/*",
    "https://school-test.mos.ru/*",
    "https://*.mos.ru/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "https://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}